############## Blockchain Configuration ##############

# Infura and Alchemy API Keys for accessing Ethereum, Polygon, and Flow networks
INFURA_API_KEY=<Your_Infura_API_Key>        # Infura API key for multi-network access
ALCHEMY_API_KEY=<Your_Alchemy_API_Key>      # Alchemy API key (alternative to Infura)

# Private key and Etherscan API for contract deployment and verification
PRIVATE_KEY=<Your_Private_Key>              # Deployer private key (keep it secret)
ETHERSCAN_API_KEY=<Your_Etherscan_API_Key>  # Etherscan API key for contract verification

############## Payments and Streaming Services ##############

# Circle API for USDC Payments
CIRCLE_API_KEY=<Your_Circle_API_Key>        # API key for Circle USDC integration

# Superfluid for real-time payment streaming
SUPERFLUID_HOST=<Your_Superfluid_Host_URL>  # Superfluid host endpoint

############## Wallet and Membership Management ##############

# Ledger Wallet Integration
LEDGER_DEVICE_ID=<Your_Ledger_Device_ID>    # Ledger device ID for secure wallet management

# Unlock Protocol for Membership Keys
UNLOCK_API_KEY=<Your_Unlock_API_Key>        # API key for managing Unlock Protocol memberships

############## Database Configuration ##############

# MongoDB URI for connecting to the database
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/kosma?retryWrites=true&w=majority

############## Graph Protocol Configuration ##############

# API key for deploying and updating subgraphs on The Graph
GRAPH_API_KEY=<Your_Graph_API_Key>          # Key for Graph Protocol subgraph management

############## Hosting and Deployment Configuration ##############

# AWS Configuration for hosting frontend and assets
AWS_ACCESS_KEY_ID=<Your_AWS_Access_Key_ID>           # AWS access key ID
AWS_SECRET_ACCESS_KEY=<Your_AWS_Secret_Access_Key>   # AWS secret access key
AWS_S3_BUCKET=<Your_AWS_S3_Bucket_Name>              # S3 bucket name for frontend hosting
AWS_CLOUDFRONT_ID=<Your_AWS_CloudFront_ID>           # CloudFront distribution ID for caching

# Vercel for frontend deployment
VERCEL_TOKEN=<Your_Vercel_Token>                     # Vercel deployment token

# Cloudflare Pages configuration for alternative hosting
CLOUDFLARE_PROJECT_NAME=<Your_Cloudflare_Project_Name>  # Cloudflare Pages project name

############## Notifications Configuration ##############

# Slack Webhook URL for notifications
SLACK_WEBHOOK_URL=<Your_Slack_Webhook_URL>  # Webhook URL to send notifications to Slack

############## Security and Authentication ##############

# JWT secret for token-based authentication
JWT_SECRET=<Your_JWT_Secret>                # JSON Web Token secret key

# Session timeout (in seconds)
SESSION_TIMEOUT=3600                        # Session timeout for user sessions

############## Redis Caching Configuration (Optional) ##############

# Redis configuration for caching
REDIS_HOST=<Your_Redis_Host>                # Redis server host address
REDIS_PORT=6379                             # Redis server port
REDIS_PASSWORD=<Your_Redis_Password>        # Redis password (optional)

############## Application Settings ##############

# Node environment (development/production)
NODE_ENV=production                         # Set to 'production' for live deployments

# Application port
PORT=3000                                   # Default port for the application to run

############## Security Best Practices ##############

# Prevent accidental key exposure in logs and error messages
MASK_KEYS=true                              # Mask sensitive keys in logs

# Enable rate-limiting to prevent API abuse
ENABLE_RATE_LIMIT=true                      # Enable rate-limiting for APIs

# Encryption salt for sensitive data storage
ENCRYPTION_SALT=<Your_Encryption_Salt>      # Salt used for encrypting sensitive data

