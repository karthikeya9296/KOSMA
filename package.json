{
    "name": "kosma",
    "version": "1.0.0",
    "description": "Kosma - A Decentralized Social Media Platform",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "test": "jest --coverage",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "test:integration": "cypress run",
        "test:contracts": "hardhat test",
        "deploy:contracts": "hardhat run scripts/deployContracts.js --network mainnet",
        "deploy:frontend": "bash ./scripts/deployFrontend.sh",
        "deploy": "npm run build && npm start",
        "type-check": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "keywords": [
        "decentralized", "social media", "blockchain", "nft", "cross-chain", "privacy", "kosma"
    ],
    "author": "Karthik",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^16.4.5",
        "mongoose": "^8.7.2",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "axios": "^1.2.2",
        "web3": "^1.7.5",
        "ethers": "^5.7.0",
        "bcrypt": "^5.1.0",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "helmet": "^6.0.0",
        "superfluid-finance": "^1.0.0",
        "truffle-plugin-verify": "^0.6.3",
        "hardhat": "^2.12.7",
        "ipfs-http-client": "^59.0.0",
        "circle-api": "^1.0.0",
        "layerzero-sdk": "^2.0.0"
    },
    "devDependencies": {
        "nodemon": "^2.0.22",
        "eslint": "^8.34.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^29.4.0",
        "cypress": "^12.4.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "babel-loader": "^8.3.0",
        "typescript": "^4.9.5",
        "ts-node": "^10.9.1",
        "prettier": "^2.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "hardhat-gas-reporter": "^1.0.9",
        "solidity-coverage": "^0.7.22",
        "dotenv-webpack": "^8.0.1"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "es2021": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:node/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "no-console": "warn",
            "prettier/prettier": "error"
        }
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "testTimeout": 30000
    },
    "cypress": {
        "baseUrl": "http://localhost:3000",
        "viewportWidth": 1280,
        "viewportHeight": 720
    }
}
