{
    "name": "kosma",
    "version": "1.0.0",
    "description": "Kosma - A Decentralized Social Media Platform",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "test": "jest --coverage",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "test:integration": "cypress run",
        "test:contracts": "hardhat test",
        "deploy:contracts": "hardhat run scripts/deployContracts.js --network mainnet",
        "deploy:frontend": "bash ./scripts/deployFrontend.sh",
        "deploy": "npm run build && npm start",
        "type-check": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "keywords": [
        "decentralized",
        "social media",
        "blockchain",
        "nft",
        "cross-chain",
        "privacy",
        "kosma"
    ],
    "author": "Karthik",
    "license": "ISC",
    "dependencies": {
        "@nomiclabs/hardhat-ethers": "^2.2.3",
        "@nomiclabs/hardhat-etherscan": "^3.1.8",
        "@nomiclabs/hardhat-waffle": "^2.0.6",
        "@openzeppelin/contracts": "^5.1.0",
        "@story-protocol/contracts": "github:storyprotocol/protocol-contracts",
        "@story-protocol/protocol-core": "github:storyprotocol/protocol-core-v1",
        "bcrypt": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "ethers": "^5.7.0",
        "express": "^4.18.2",
        "hardhat": "^2.12.7",
        "helmet": "^6.0.0",
        "ipfs-http-client": "^59.0.0",
        "layerzero": "^1.0.1",
        "mongoose": "^8.7.2",
        "morgan": "^1.10.0",
        "truffle-plugin-verify": "^0.6.3",
        "typescript-sdk": "github:storyprotocol/sdk",
        "web3": "^4.13.0"
    },
    "devDependencies": {
        "@babel/core": "^7.25.8",
        "@babel/preset-env": "^7.25.8",
        "@babel/preset-react": "^7.25.7",
        "babel-loader": "^8.4.1",
        "css-loader": "^7.1.2",
        "cypress": "^13.15.0",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "file-loader": "^6.2.0",
        "hardhat-gas-reporter": "^1.0.9",
        "jest": "^29.4.0",
        "nodemon": "^3.1.7",
        "prettier": "^2.8.0",
        "sass-loader": "^16.0.2",
        "solidity-coverage": "^0.8.13",
        "style-loader": "^4.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "es2021": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:node/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "no-console": "warn",
            "prettier/prettier": "error"
        }
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "testTimeout": 30000
    },
    "cypress": {
        "baseUrl": "http://localhost:3000",
        "viewportWidth": 1280,
        "viewportHeight": 720
    }
}
